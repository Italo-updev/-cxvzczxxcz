    <script>
        function createStars() {
            const starsContainer = document.getElementById('stars');
            const starSymbols = ['‚≠ê', '‚ú®', 'üí´', 'üåü'];
            
            for (let i = 0; i < 50; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                star.textContent = starSymbols[Math.floor(Math.random() * starSymbols.length)];
                star.style.left = Math.random() * 100 + '%';
                star.style.top = Math.random() * 100 + '%';
                star.style.animationDelay = Math.random() * 2 + 's';
                starsContainer.appendChild(star);
            }
        }
        
        let tentativasNao = 0;
        const mensagensFuga = [
            "üèÉ‚Äç‚ôÄÔ∏è N√£o t√£o r√°pido!",
            "üöÄ Houston, temos um problema!",
            "üê± A Hello Kitty discorda!",
            "üî¨ Dados cient√≠ficos dizem que n√£o!",
            "üíñ Seu cora√ß√£o sabe a verdade!",
            "üå∏ Aceite sua fabulosidade!"
        ];
        
        function fugirBotao() {
            const btnNao = document.getElementById('btnNao');
            const randomX = (Math.random() - 0.5) * window.innerWidth * 0.3;
            const randomY = (Math.random() - 0.5) * window.innerHeight * 0.3;
            
            btnNao.style.transform = `translate(${randomX}px, ${randomY}px) rotate(${Math.random() * 360}deg)`;
            
            if (tentativasNao < mensagensFuga.length) {
                btnNao.textContent = mensagensFuga[tentativasNao];
                tentativasNao++;
            }
            
            if (navigator.vibrate) {
                navigator.vibrate(100);
            }
            
            setTimeout(() => {
                btnNao.style.transform = 'translate(0, 0) rotate(0deg)';
                if (tentativasNao >= mensagensFuga.length) {
                    btnNao.textContent = '‚ùå IMPOSS√çVEL';
                    btnNao.style.opacity = '0.5';
                }
            }, 2000);
        }
        
        function tentarNao() {
            alert('üö´ ERROR 404: Op√ß√£o "N√ÉO" n√£o encontrada no sistema! üö´\n\nüî¨ Nossos cientistas determinaram que esta op√ß√£o √© cientificamente imposs√≠vel!');
        }
        
        function confirmarPeituda() {
            document.getElementById('loadingScreen').style.display = 'flex';
            
            const messages = [
                "üõ∞Ô∏è Conectando com sat√©lites...",
                "üî¨ Analisando dados biom√©tricos...",
                "üê± Consultando banco de dados da Hello Kitty...",
                "üíñ Processando fabulosidade...",
                "‚ú® Validando com unic√≥rnios...",
                "üåà Confirmando com o arco-√≠ris...",
                "üéÄ Aprova√ß√£o final da NASA..."
            ];
            
            let progress = 0;
            let messageIndex = 0;
            
            const interval = setInterval(() => {
                progress += Math.random() * 20;
                if (progress > 100) progress = 100;
                
                document.getElementById('loadingProgress').style.width = progress + '%';
                
                if (messageIndex < messages.length) {
                    document.getElementById('loadingMessages').innerHTML = 
                        `<div style="color: #00ff00; font-size: 1.2rem; margin-top: 20px;">${messages[messageIndex]}</div>`;
                    messageIndex++;
                }
                
                if (progress >= 100) {
                    clearInterval(interval);
                    setTimeout(() => {
                        document.getElementById('loadingScreen').style.display = 'none';
                        document.getElementById('successScreen').style.display = 'flex';
                        createFireworks();
                    }, 1000);
                }
            }, 800);
        }
        
        function createFireworks() {
            const fireworksContainer = document.getElementById('fireworks');
            const colors = ['#ff69b4', '#00ff00', '#ffff00', '#ff0000', '#00ffff', '#ff8c00'];
            
            for (let i = 0; i < 20; i++) {
                setTimeout(() => {
                    const firework = document.createElement('div');
                    firework.className = 'firework';
                    firework.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                    firework.style.left = Math.random() * 100 + '%';
                    firework.style.top = Math.random() * 100 + '%';
                    fireworksContainer.appendChild(firework);
                    
                    setTimeout(() => {
                        firework.remove();
                    }, 1000);
                }, i * 200);
            }
        }
        
        // Inicializar
        createStars();
        
        // Eventos para mobile
        document.addEventListener('DOMContentLoaded', function() {
            const btnNao = document.getElementById('btnNao');
            btnNao.addEventListener('touchstart', fugirBotao);
            btnNao.addEventListener('touchend', function(e) {
                e.preventDefault();
                tentarNao();
            });
        });
        
        // Easter egg: Konami code
        let konamiCode = [];
        const konamiSequence = [38, 38, 40, 40, 37, 39, 37, 39, 66, 65];
        
        document.addEventListener('keydown', (e) => {
            konamiCode.push(e.keyCode);
            if (konamiCode.length > konamiSequence.length) {
                konamiCode.shift();
            }
            
            if (konamiCode.toString() === konamiSequence.toString()) {
                alert('üéÆ CHEAT CODE ATIVADO! üéÆ\n\nüöÄ Voc√™ desbloqueou o modo ULTRA PEITUDA! üöÄ');
                document.body.style.animation = 'rainbow 0.5s infinite';
            }
        });
